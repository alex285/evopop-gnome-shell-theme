/* App Switcher */

.switcher-popup 
	padding 8px
	spacing 16px
	//background red //change screen color
	
	
.switcher-list .item-box:selected 
	background-color blue-light

	
.switcher-list
	font-size 1.1em
	font-weight bold
	color gray-lighter
	
.switcher-list .item-box:outlined 
	padding 6px
	border 2px solid blue-light
	background blue-light

.switcher-arrow 
	border-color rgba(0,0,0,0);
	color gray-lighter

.switcher-arrow:highlighted 
	color blue-light


	
