/* App Switcher */

.switcher-popup
	padding 8px
	spacing 16px


.switcher-list
	font-size 1.1em
	font-weight bold
	color gray-base
	border-radius 3px
	padding 12px
	background gray-lighter

.switcher-list
	.item-box
		&:selected
			background-color blue-light
			border-radius 3px
		&:outlined
			padding 6px
			border 2px solid blue-light
			background blue-light

//.switcher-list:last-child


.switcher-arrow
	border-color rgba(0,0,0,0);
	color gray-lighter


.switcher-arrow:highlighted
	color gray-base

.switcher-list-item-container
	spacing 8px

.switcher-list .thumbnail-box
	padding 2px
	spacing 4px

.switcher-list .thumbnail
	width 256px

.switcher-list .separator
	width 1px
	background transparent


.input-source-switcher-symbol
	font-size 34pt
	width 96px
	height 96px



