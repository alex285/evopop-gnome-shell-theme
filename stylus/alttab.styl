/* App Switcher */

.switcher-popup 
	padding 8px
	spacing 16px

.switcher-list
	font-size 1.1em
	font-weight bold
	color gray-lighter
	border-radius 3px
	padding 12px	
	
.switcher-list 
	.item-box
		&:selected 
			background-color blue-light
			border-radius 3px		
		&:outlined
			padding 6px
			border 2px solid blue-light
			background blue-light	

.switcher-arrow 
	border-color rgba(0,0,0,0);
	color gray-lighter

.switcher-arrow:highlighted 
	color blue-light

