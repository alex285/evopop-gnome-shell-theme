//fix that with mixins

.button
  border-radius 3px
  border none
  padding 9px 32px
  color gray-light
  background-color darken(gray-lighter, 10%)
  box-shadow: inset 0 1px darken(gray-lighter, 10%)
  text-shadow 0px transparent
  //icon-shadow none
  font-weight bold
  &:active
  &:focus
  &:hover
    background blue-light
    color gray-lighter
    box-shadow: inset 0 1px blue-light
  &:insensitive
    color gray-light
