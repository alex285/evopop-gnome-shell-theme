
#calendarArea
	padding 0 0 15px 0
	margin 0em
	font-size 1em
	font-weight normal


.calendar
.datemenu-today-buttongray-lighter
.datemenu-displays-box
	background gray-base
	color gray-lighter
	border-radius 3px
	box-shadow 0px 5px 10px 0px rgba(0,0,0,0.5)
	padding 20px

//.datemenu-displays-box
//	box-shadow 0px 5px 10px 0px rgba(0,0,0,0.5)

.datemenu-displays-box
	background blue-light


.datemenu-today-button .date-label
	font-size 1.6em
	padding 5px 0 0 0
	color gray-base

.message-list-sections
	color gray-base
	height $calendar-max-scroll //set it from variables
	margin 0 1em 0 0.5em

.datemenu-calendar-column
	padding 0 0 0px 0
	background gray-lighter
	//box-shadow 0px 5px 10px 0px rgba(0,0,0,0.5)

.datemenu-displays-section
	padding-bottom 0em

.world-clocks-button
.message-list-section-title
	color gray-lighter
	padding 8px 10px
	&:hover
	&:focus
	&:active
		background darken(gray-lighter, 10%)
		color gray-base
	&:last-child
		background blue-light
		padding 7px 10px 5px 10px //40px doesnt really matter, just take full padding
		color gray-lighter
		border-radius 3px

.datemenu-today-button
	padding 10px
	color gray-base
	&:hover
	&:focus
	&:active
		background darken(gray-lighter, 10%)
		transition-duration 200ms


.message-list-section-title
	color gray-base


.world-clocks-header
	color gray-lighter
	font-size 1.1em

.calendar-change-month-back
	background-image: url("assets/calendar-arrow-left.svg")
	&:rtl
		background-image: url("assets/calendar-arrow-right.svg")

.calendar-change-month-forward
	background-image: url("assets/calendar-arrow-right.svg")
	&:rtl
		background-image: url("assets/calendar-arrow-left.svg")

.calendar-day-base
	font-weight normal
	font-size 9.5pt
	&:hover
	&:focus
		background-color blue-light
		color #fff
	&:active
		color #fff
		background-color blue-light
		border-color: transparent; //avoid jumparound due to today
	&.calendar-day-heading
		color gray-lighter
		margin-top: 1em;
		font-size: 70%;

.calendar-day-with-events
	//border 1px solid gray-lighter
	color blue-light
	font-weight bold
	//font-size 1.1em fix that will spacing, it will be cool!

.calendar-other-month-day

.calendar-day  //border collapse hack - see calendar.js
	border-width 0

.calendar-today
	background cyan-base
	color #fff

.message-list-placeholder
	font-weight bold
	font-size 1.1em
	color lighten(gray-light, 40%)
