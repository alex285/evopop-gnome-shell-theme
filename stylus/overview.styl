	background gray-lighter
	color gray-base
	font-weight bold
	font-size 1.0em
	border none
	box-shadow none
	padding 10px 25px
	border-radius 0px
	&:active
	&:checked
		background blue-light
		color gray-lighter

.window-close
	background url(close-window-img)
	background-size 32px
	width 32px
	height 32px


#overview
	spacing 24px

