
.popup-menu
	min-width 200px
	color popup-fg-c
	font-weight bold

	.popup-sub-menu
		background darken(popup-bg-c, 8%)
		box-shadow inset 0 1px 0px popup-bg-c
		padding-top 7px
		padding-bottom 7px

	.popup-menu-content
		padding 0.5em 0em 0.5em 0em
	.popup-menu-item
		spacing 5px		
		&:ltr
			padding .5em 1.75em .5em 0em
		&:rtl
			padding .6em 0em .6em 1.75em
		&:checked
			background-color popup-bg-c
			font-size 1.0em
			box-shadow inset 0 1px 0px  popup-bg-c
		&.selected
			background-color popup-bg-c
			color popup-fg-s-c
		&:active
			background-color popup-bg-c
			color blue-light
		&:insensitive
			color lighten(gray-light,30%)
	.popup-inactive-menu-item
		color popup-fg-c
		&:insensitive
			color gray-light
	&.panel-menu
		-boxpointer-gap 4px
		margin-bottom 1.75em

	.popup-sub-menu .popup-menu-item
		&.selected
			background darken(popup-bg-c, 8%)

//Popup arrow

.popup-menu-boxpointer
.candidate-popup-boxpointer
	-arrow-border-radius 3px
	-arrow-background-color popup-bg-c
	-arrow-border-width 1px
	-arrow-border-color #ccc
	-arrow-base 16px
	-arrow-rise 7px
	-arrow-box-shadow 0 1px 3px popup-bg-c //dreaming. bug #689995


.popup-separator-menu-item
	padding 0
	height 1px //not really the whole box
	margin 0px 0px
	background-color darken(popup-bg-c, 5%)
	border-color darken(popup-bg-c, 5%)
	border-bottom-width 1px
	border-bottom-style solid
	border none
	box-shadow inset 0px 1px 0 darken(popup-bg-c, 7%)

.background-menu
	-boxpointer-gap 4px;
	-arrow-rise 0px
	box-shadow inset 0 1px 0px popup-bg-c


.workspace-thumbnails
	border-radius 3px 0 0 3px
	padding 12px 10px 10px 10px
	background workspace-bg-c


.workspace-thumbnail-indicator
	border 5px solid lime-base
	border none
	border-left 5px solid lime-base
	padding 0px
	border-radius 0px

