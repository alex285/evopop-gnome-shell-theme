
.legacy-tray
	background-color gray-lighter
	border 1px solid darken(gray-lighter, 30%)
	border-bottom-width 0
	
	&:ltr 
		border-radius 0 3px 0 0 
		border-left-width 0
	&:rtl
		border-radius 3px 0 0 0 
		border-right-width 0


.legacy-tray-handle
.legacy-tray-icon 
	border-top 2px solid gray-lighter //add this so we can change border color on focus only
	padding 4px
	color gray-base
	& StIcon 
		icon-size 24px	//value set from $legacy_icon_size 
	&:hover		
	&:focus
		color blue-light	
		border-top 2px solid blue-light

.legacy-tray-icon-box	
	spacing 10px	
	&:ltr 
		padding-left 12px
	&:rtl
		padding-right 12px		
	& StButton 
		width 24px 
		height 24px
